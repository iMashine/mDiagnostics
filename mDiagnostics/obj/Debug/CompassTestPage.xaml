<Page
    x:Class="mDiagnostics.CompassTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mDiagnostics"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

        <Page.Resources>
            <x:String x:Key="CTP_str1">В данном тесте, необходимо</x:String>
            <x:String x:Key="CTP_str2">просто наслаждаться компасом</x:String>
            <x:String x:Key="CTP_str3">вашего устройства</x:String>
            <x:String x:Key="CTPtitle">Проверка компаса</x:String>
            <x:String x:Key="CTPstartbtn">Начать наслаждаться</x:String>
        </Page.Resources>
        <Page.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/PortraitScreen.png"/>
        </Page.Background>
        <Page.BottomAppBar>
            <CommandBar 
            x:Name="CTPcmdBar" 
            VerticalAlignment="Center" 
            HorizontalContentAlignment="Stretch" 
            UseLayoutRounding="True" 
            Foreground="White" Background="#FF288484">
                <CommandBar.ContentTransitions>
                    <TransitionCollection/>
                </CommandBar.ContentTransitions>
                <AppBarButton x:ConnectionId='1' x:Name="CTPtorepeat" Icon="Redo" Label="Repeat test"                           />
                <AppBarButton x:ConnectionId='2' x:Name="CTPtonext" Icon="Forward" Label="Next test"                         />
            </CommandBar>
        </Page.BottomAppBar>

        <Grid x:Name="CTPgrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </Grid.ChildrenTransitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="CTPtvgrid" Margin="0,0,0,1.833">
                <Grid.RowDefinitions>
                    <RowDefinition Height="88*"/>
                    <RowDefinition Height="34*"/>
                    <RowDefinition Height="34*"/>
                    <RowDefinition Height="35*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="CTPtitle1" Grid.ColumnSpan="2" Grid.RowSpan="2" Height="89" Width="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="78*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="90*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:ConnectionId='4' x:Name="CTPback" Source="Assets/btns/back.png" Height="25" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" Grid.Column="1" Grid.Row="1"                                        />
                    <TextBlock x:Name="CTPtitle" 
            		Margin="27,0,26,0" 
            		Text="{StaticResource CTPtitle}"
            		Style="{ThemeResource HeaderTextBlockStyle}" 
            		FontSize="32" Foreground="White" SelectionHighlightColor="Black" FontWeight="Light" FontFamily="{StaticResource AppFont}" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Column="1"/>
                </Grid>
                <TextBlock x:Name="CTPstr1" 
            	Margin="0" 
            	Text="{StaticResource CTP_str1}"
            	Style="{ThemeResource HeaderTextBlockStyle}" 
            	FontSize="22" Foreground="White" SelectionHighlightColor="Black" FontWeight="Normal" FontFamily="{StaticResource AppFont}" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="CTPstr2" 
            	Text="{StaticResource CTP_str2}" 
            	Margin="0" 
            	Style="{ThemeResource HeaderTextBlockStyle}" 
            	FontSize="22" FontFamily="{StaticResource AppFont}" Grid.Row="2" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="CTPstr3" 
            	Margin="0" 
            	Text="{StaticResource CTP_str3}" 
            	Style="{ThemeResource HeaderTextBlockStyle}" 
            	FontSize="22" FontFamily="{StaticResource AppFont}" Grid.Row="3" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            </Grid>

            <Grid Grid.Row="1" x:Name="CTPcontentgrid" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='3' x:Name="CTPstrbtn" Content="{StaticResource CTPstartbtn}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource AppFont}" FontWeight="Light" FontSize="24"                        />
                <TextBlock x:Name="CTPmsg" TextWrapping="Wrap" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed"/>
                <Image x:Name="CTPimg" Grid.Row="1" Source="Assets/testsicons/CTP.png" HorizontalAlignment="Center" VerticalAlignment="Top" Height="220" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <CompositeTransform Rotation="-1"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Grid>
    </Page>

